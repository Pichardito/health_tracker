<h1>List of your patients</h1>


<div class="jumbotron center">
	<ul>
		<% current_doctor.patients.each do |patient| %>
			<li>
				<%= patient.name %>
				<%= link_to 'Go to patient', patient %>
				<%= link_to 'Edit this patient', edit_patient_path(patient) %>
				<%= link_to 'Delete this patient', patient, method: :delete, data: { confirm: 'Are you sure?' } %>
				<%= link_to 'New Medical record', new_patient_record_path(patient) %>

			</li>
		<% end %>
	</ul>
	<%= link_to 'Create New Patient', new_patient_path%>
</div>
